<%= search_form_for [:admin, @q] do |f| %>
  <%= f.label :user_email %>
  <%= f.search_field :user_email_cont %>

  <%= f.label :aasm_state %>
  <%= f.search_field :aasm_state_cont %>

  <%= f.submit %>
<% end %>

