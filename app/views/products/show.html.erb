<h1><%= @product.name %></h1>
<p><%= @product.description %><p>
<h3><%= "#{@product.price} zł"%></h3>

<%= form_with model: @cart_product, local: true do |form| %>
  <%= form.hidden_field :product_id, value: @product.id %>
  <%= form.hidden_field :cart_id, value: @cart.id %>
  <%= form.number_field :number_to_add, value: 1 %>
  <%= form.submit 'Dodaj do koszyka' %>
<% end %>

<%= link_to 'Powrót', root_path %>

<%= link_to 'Koszyk', cart_path(@cart) %>
